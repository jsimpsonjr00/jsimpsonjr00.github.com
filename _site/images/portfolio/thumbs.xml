<project basedir="." name="lessCompile">
    <property name="convert" location="C:\Program Files\ImageMagick-6.6.9-Q16\convert.exe"/>
    <exec dir="${basedir}" executable="${convert}">
        <arg line="*.png -filter Welsh -adaptive-resize 360x202! -set filename:myname '%t-360' thumbs\%[filename:myname].png"/>
    </exec>
    <exec dir="${basedir}" executable="${convert}">
        <arg line="*.png -filter Welsh -adaptive-resize 720x404! -set filename:myname '%t-720' medium\%[filename:myname].png"/>
    </exec>
</project>